# Telegram API credentials (REQUIRED)
# Get these from https://my.telegram.org/apps
API_ID=your_api_id
API_HASH=your_api_hash

# Bot token from @BotFather (REQUIRED)
BOT_TOKEN=your_bot_token

# Admin user IDs (REQUIRED)
# Your Telegram user ID - comma-separated for multiple admins
# Get your ID by sending /start to @userinfobot
ADMIN_USER_IDS=your_telegram_user_id,another_admin_id

# Optional: Performance Settings (defaults are fine for most cases)
MAX_CONCURRENT_DOWNLOADS=3
MAX_CONCURRENT_TORRENTS=2
MAX_CONCURRENT_ZIPS=2
MAX_TASKS_PER_USER=5

# Optional: Rate Limiting (adjust based on your needs)
HOURLY_TASKS_LIMIT=10
DAILY_TASKS_LIMIT=30
DAILY_DATA_LIMIT_GB=20
WEEKLY_DATA_LIMIT_GB=100
COOLDOWN_MINUTES=5

# Optional: System Settings
MAX_DISK_USAGE_PERCENT=90
CHECK_DISK_INTERVAL=300
